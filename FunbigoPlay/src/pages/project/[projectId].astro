---
import {getFunbigoFileUrl, getProjectData} from "../../api";
import {FUNBIGO_GOOGLE_PLAY_URL, FUNBIGO_APP_PACKAGE_NAME, FUNBIGO_PLAY_HOST, FUNBIGO_SITE_NAME} from "../../consts";

export const prerender = false;

const { projectId } = Astro.params;

const projectData = await getProjectData(projectId);
if (!projectData) return Astro.redirect("/404");

const projectImageUrl = getFunbigoFileUrl(projectData.IconId);
const currentUrl = Astro.request.url;

const androidIntentUrl =
    `intent://project/${projectId}#Intent;` +
    "scheme=https;" +
    `host=${FUNBIGO_PLAY_HOST};` +
    `package=${FUNBIGO_APP_PACKAGE_NAME};` +
    `S.browser_fallback_url=${FUNBIGO_GOOGLE_PLAY_URL};` +
    "end";
---

<html lang="en">
    <head>
        <meta charset="UTF-8">
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{projectData.Name}</title>
    
        <!-- Open Graph Tags (WhatsApp, Discord, Facebook) -->
        <meta property="og:title" content={projectData.Name} />
        <meta property="og:description" content={projectData.MetaData.shortDescription} />
        <meta property="og:image" content={projectImageUrl} />
        <meta property="og:url" content={currentUrl} />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content={FUNBIGO_SITE_NAME} />
    
        <!-- Twitter Card Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={projectData.Name} />
        <meta name="twitter:description" content={projectData.MetaData.shortDescription} />
        <meta name="twitter:image" content={projectImageUrl} />
    
        <!-- Smart Redirect Script (Attempts App Open, then falls back to Store) -->
        <script>    
            window.onload = function() {
                window.location.replace(androidIntentUrl);
            };
        </script>
    </head>
    <body>
        <img src={projectImageUrl} alt={`${projectData.Name} Icon`} width="100" height="100" />
        <h1>Redirecting to {projectData.Name}</h1>
        <p>If the app does not open, please visit the store below.</p>
        <a href={FUNBIGO_GOOGLE_PLAY_URL}>Download on Google Play</a>
    </body>
</html>

<style>
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        font-family: Arial, sans-serif;
        text-align: center;
    }
    img {
        border-radius: 8px;
        margin-bottom: 20px;
    }
    h1 {
        margin-bottom: 10px;
    }
    a {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #4285F4;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }
    a:hover {
        background-color: #357AE8;
    }
</style>